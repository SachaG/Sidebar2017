                      </td>
                  </tr>
                {{/if}}
                <tr>
                    <td align="center" valign="top" style="padding: 20px 20px 40px 20px;">
                        <!-- NOTIFICATIONS REMINDER -->
                        <p class="text-secondary">Sacha Greif - Paris, France</p>
                    </td>
                </tr>
            </table>
            <!--[if (gte mso 9)|(IE)]>
            </td>
            </tr>
            </table>
            <![endif]-->
        </td>
    </tr>
</table>
