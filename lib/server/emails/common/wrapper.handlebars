            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 720px;" >
                {{#if date}}
                  <tr>
                      <td align="center" valign="top" style="padding: 40px 20px 20px 20px;">
                          <!-- SHARING -->
                          <p class="text-secondary">Email not displaying properly? <a href="*|ARCHIVE|*" class="link-secondary" target="_blank">View browser version.</a></p>
                      </td>
                  </tr>
                {{/if}}
                <tr>
                    <td bgcolor="#F56C33" align="left" valign="top" style="border-radius: 0px 0px 0 0; padding: 0px 0px 0px 0px;">
                        <table width="100%">
                          <tr>
                            <td align="left">
                            <!-- LOGO OR SITE NAME -->
                              {{#if logoUrl}}
                              <a href="{{siteUrl}}"><img alt="{{siteName}}" src="{{logoUrl}}" width="{{logoWidth}}" height="{{logoHeight}}" style="color: #ffffff; display: block; font-family: Helvetica, Arial, sans-serif; font-size: 18px; line-height: 20px;" border="0"></a>
                              {{else}}
                              <a href="{{siteUrl}}" class="link-title">{{siteName}}</a>
                              {{/if}}
                            </td>
                            <td align="right" valign="center" style="padding: 0px 20px;">
                              {{#if date}}
                                <p class="date">{{date}}</p>
                              {{/if}}
                            </td>
                          </tr>
                        </table>
                    </td>
                </tr>

                <!-- TAGLINE -->
